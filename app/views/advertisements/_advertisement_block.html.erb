<div class="card">
  <a href="/advertisements/<%= advertisement.id%>"><img class="card-img-top" src="<%= advertisement.cover('medium')%>" alt="And this isn't my nose. This is a false one."></a>
  <div class="card-body d-flex flex-column p-2">
    <h6><a href="#"><%= advertisement.title%></a></h6>
    <div class="d-flex align-items-center pt-1 mt-auto">
      <div class="ml-auto text-muted">
        <div class="small">
        <a href="javascript:void(0)" class="icon d-none d-md-inline-block ml-3"><i class="fe fe-heart mr-1"></i></a>
        <% if params[:controller] == 'home'%>
        <%= link_to "/advertisements/change_rank/#{advertisement.id}?move=up" do%>
        <i class="fa fa-arrow-up"></i>
        <%end%>
        <%= link_to "/advertisements/change_rank/#{advertisement.id}?move=down" do%>
        <i class="fa fa-arrow-down"></i>
        <%end%>
        <%end%>
      </div>
    </div>

      <div>

        <small class="d-block text-muted"></small>
      </div>

    </div>
  </div>
</div>
