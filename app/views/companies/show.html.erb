<div class='row'>
  <div class="col-lg-12 order-lg-1">
    <div class="card">
      <div class="card-header">
        <h3 class="card-title"></h3>
        <div class="card-options">
            <a href="/companies/<%=@company.uuid%>/edit" class='btn btn-secondary'><i class="fe fe-edit" style="vertical-align:-3px;"></i> <%=t :edit%></a>
        </div>
      </div>
      <div class="card-body">
        <div class='row'>
          <div class='col-md-12 col-lg-12'>
            <div class="form-group">
              <%= label :company, :name , class: "form-label", style: 'color: #7795c1;'%>
              <div class="form-control-plaintext"><%= @company.name %></div>
            </div>
            <div class="form-group">
              <%= label :company, :phone_number , class: "form-label", style: 'color: #7795c1;'%>
              <div class="form-control-plaintext"><%= @company.phone_number %></div>
            </div>
            <div class="form-group">
              <%= label :company, :email , class: "form-label", style: 'color: #7795c1;'%>
              <div class="form-control-plaintext"><%= @company.email %></div>
            </div>
            <div class="form-group">
              <%= label :company, :telegram_channel , class: "form-label", style: 'color: #7795c1;'%>
              <div class="form-control-plaintext"><%= @company.telegram_channel %></div>
            </div>
            <div class="form-group">
              <%= label :company, :instagram_page , class: "form-label", style: 'color: #7795c1;'%>
              <div class="form-control-plaintext"><%= @company.instagram_page %></div>            </div>
              <div class="form-group">
                <%= label :company, :address , class: "form-label", style: 'color: #7795c1;'%>
                <div class="form-control-plaintext"><%= @company.address %></div>
              </div>
              <div class="form-group">
                <%= label :company, :about_us , class: "form-label", style: 'color: #7795c1;'%>
                <div id="trix-content" class="form-control-plaintext"><%= sanitize @company.about_us %></div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
