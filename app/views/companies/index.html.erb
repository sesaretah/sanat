<div class="row row-cards">
  <div class="col-lg-12">
    <div class="card">
      <table class="table card-table table-vcenter">
        <tbody>
          <% @companies.each do |company| %>
          <tr>
            <td><%= company.name %></td>
            <td><%= company.phone_number %></td>
            <td><%= company.email %></td>
            <td><%= company.telegram_channel %></td>
            <td><%= company.instagram_page %></td>
            <td><%= company.address %></td>
            <td><%= company.about_us %></td>
            <td><%= company.uuid %></td>
            <td><%= link_to t(:show), company %></td>
            <td><%= link_to t(:edit), edit_company_path(company) %></td>
            <td><%= link_to t(:destroy), company, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
