<%= form_for(@access_control, html: {class: 'card'}) do |f| %>
<div class="card-header">
  <h3 class="card-title"><%=t :new_access_control %></h3>
</div>
<% if @access_control.errors.any? %>
<div id="error_explanation">
  <h2><%= pluralize(@access_control.errors.count, "error") %> prohibited this access_control from being saved:</h2>

  <ul>
    <% @access_control.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

<div class="card-body">
  <div class="row">
    <div class="col-md-5">
      <div class="form-group">
        <label class="custom-control custom-checkbox">
          <input type="checkbox" class="custom-control-input" name="access_control[ability_to_post_ads]" value="1">
          <span class="custom-control-label"><%=t :ability_to_post_ads%></span>
        </label>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-5">
      <div class="form-group">
        <label class="custom-control custom-checkbox">
          <input type="checkbox" class="custom-control-input" name="access_control[ability_to_post_blog]" value="1">
          <span class="custom-control-label"><%=t :ability_to_post_blog%></span>
        </label>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-5">
      <div class="form-group">
        <label class="custom-control custom-checkbox">
          <input type="checkbox" class="custom-control-input" name="access_control[ability_to_verify_ads]" value="1">
          <span class="custom-control-label"><%=t :ability_to_verify_ads%></span>
        </label>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-5">
      <div class="form-group">
        <label class="custom-control custom-checkbox">
          <input type="checkbox" class="custom-control-input" name="access_control[ability_to_change_categories]" value="1">
